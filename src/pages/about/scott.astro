    padding: 80px 24px;
    background: var(--color-sand);
  }
  .coverage-inner {
    max-width: var(--max-width, 1120px);
    margin: 0 auto;
  }
  .coverage-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
  .coverage-card {
    background: var(--color-white);
    border-radius: 16px;
    padding: 28px 24px;
    border: 1px solid transparent;
    transition: all 0.4s cubic-bezier(0.4,0,0.2,1);
  }
  .coverage-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 24px rgba(26,35,50,0.08);
    border-color: var(--color-sand-dark);
  }
  .coverage-icon {
    font-size: 1.5rem;
    margin-bottom: 12px;
  }
  .coverage-title {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    color: var(--color-deep-night);
    margin-bottom: 8px;
  }
  .coverage-desc {
    font-size: 0.82rem;
    color: var(--color-slate);
    line-height: 1.7;
    font-weight: 300;
  }

  /* ═══════════════════════════════════════════
     CONTENT BY SCOTT
     ═══════════════════════════════════════════ */
  .content-section {
    padding: 80px 24px;
    background: var(--color-white);
  }
  .content-inner {
    max-width: var(--max-width, 1120px);
    margin: 0 auto;
  }
  .content-subhead {
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-ocean-teal);
    margin-bottom: 16px;
  }
  .content-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
