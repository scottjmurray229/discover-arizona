    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .content-all-link a:hover {
    color: var(--color-ocean-teal-dark);
  }

  /* ═══════════════════════════════════════════
     EMAIL SECTION
     ═══════════════════════════════════════════ */
  .email-section {
    padding: 64px 24px;
    background: var(--color-sand);
  }
  .email-section-inner {
